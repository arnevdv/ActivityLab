<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Activity1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onCreate() calls: "
        android:id="@+id/onCreateCalls"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/onCreateNumber"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/onCreateCalls"
        android:layout_toEndOf="@+id/onCreateCalls" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onStart() calls: "
        android:id="@+id/onStartCalls"
        android:layout_below="@+id/onCreateCalls"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/OnStartNumber"
        android:layout_alignTop="@+id/onStartCalls"
        android:layout_toRightOf="@+id/onStartCalls"
        android:layout_toEndOf="@+id/onStartCalls" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onResume() calls: "
        android:id="@+id/onResumeCalls"
        android:layout_below="@+id/onStartCalls"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/onResumeNumber"
        android:layout_alignTop="@+id/onResumeCalls"
        android:layout_toRightOf="@+id/onResumeCalls"
        android:layout_toEndOf="@+id/onResumeCalls" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onRestart() calls: "
        android:id="@+id/onRestartCalls"
        android:layout_below="@+id/onResumeCalls"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/onRestartNumber"
        android:layout_below="@+id/onResumeCalls"
        android:layout_toRightOf="@+id/onRestartCalls"
        android:layout_toEndOf="@+id/onRestartCalls" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Next Activity"
        android:id="@+id/nextActivityButton"
        android:layout_below="@+id/onRestartCalls"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
